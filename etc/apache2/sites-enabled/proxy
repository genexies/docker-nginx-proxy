<VirtualHost *:80>
	ServerName %%%SERVER_NAME%%%
	ServerAdmin %%%SERVER_ADMIN%%%

	DocumentRoot /srv/packagepeer/api/nowhere

	<Directory /srv/packagepeer/api/nowhere/>
			Options FollowSymLinks
			AllowOverride None
			Require all granted
	</Directory>

	ErrorLog ${APACHE_LOG_DIR}/error.log
	CustomLog ${APACHE_LOG_DIR}/access.log combined

	ProxyPass         /  http://api:8080/packagepeer/ retry=0 timeout=120 Keepalive=On
	ProxyPassReverse  /  http://api:8080/packagepeer/
</VirtualHost>
